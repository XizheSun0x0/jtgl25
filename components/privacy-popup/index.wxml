<view wx:if="{{showPopup}}" class="privacy-mask">
  <view class="privacy-container">
    <checkbox checked="{{checked}}" bindtap="toggleCheck"/>
    <view class="privacy-content">
      请阅读并同意<text class="privacy-link" bindtap="openPrivacy">《隐私协议》</text>
    </view>
    <view class="button-group">
      <button class="disagree-btn" bindtap="exitMiniProgram">不同意</button>
      <button class="agree-btn" bindtap="agreePrivacy">同意</button>
    </view>
  </view>
</view>