/* pages/home/home.wxss */
swiper {
  height: 350rpx;
}

swiper image { 
  width: 100%;
  height: 100%;
}

/* 外层容器 */
.item-grid-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 10px;
}

/* 每个商品项 */
.grid-item {
  width: 49%; 
  margin-bottom: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

/* 图片容器 */
.grid-image {
  width: 100%;
  height: 0;
  padding-bottom: 100%;
  position: relative;
}

.grid-image image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: contain;
}

/* 商品信息 */
.item-info {
  width: 100%;
  padding: 8px;
  text-align: center;
}

.price {
  font-size: 14px;
  color: #ff4d4f;
  font-weight: bold;
}

.stock {
  font-size: 12px;
  color: #999;
  display: block;
  margin-top: 4px;
}

/* 立即兑换按钮 */
.redeem-btn {
  width: 40%; /* 调整为父容器宽度的40% */
  min-width: 120rpx; /* 设置最小宽度，避免在窄屏上太小 */
  margin: 10px auto;
  background: #07c160;
  color: white;
  border: none;
  border-radius: 20px;
  font-size: 14px;
  line-height: 2;
  padding: 0 10rpx; /* 添加左右内边距 */
  white-space: nowrap; /* 防止文字换行 */
}

.redeem-btn:active {
  opacity: 0.8;
}