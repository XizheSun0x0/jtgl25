/* pages/user/user.wxss */
.page-container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 用户名片卡片 */
.user-card {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  margin: 20rpx;
}

.user-info-card {
  display: flex;
  flex-direction: column;
  gap: 50rpx;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 2rpx solid #f5f5f5;
}

.name {
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.phone {
  font-size: 40rpx;
  color: #999;
}

.balance-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-left: 72rpx;
  border-left: 1rpx dashed #eee;
}

.points {
  font-size: 64rpx;
  font-weight: 700;
  color: #04BE02;
  margin-bottom: 4rpx;
}

.points-label {
  font-size: 22rpx;
  color: #aaa;
  background-color: #f8f8f8;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

/* 卡片通用样式 */
.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 签到卡片 */
.sign-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 30rpx;
}

.sign-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
}

.sign-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.sign-btn {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #07C160;
  color: white;
  font-size: 32rpx;
  border-radius: 40rpx;
  border: none;
}

.sign-btn.signed {
  background: #ccc;
  color: #666;
}

.sign-btn:active {
  opacity: 0.8;
}

/* 交易记录部分 */
.transactions {
  background: white;
  border-radius: 20rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 30rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.search-container {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 40rpx;
  padding: 10rpx 20rpx;
  margin-bottom: 10rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  padding: 10rpx;
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  margin-left: 10rpx;
}

.transaction-scroll {
  height: 600rpx;
}

.transaction-list {
  min-height: 100rpx;
}

.transaction-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
}

.transaction-info {
  flex: 1;
  margin-right: 20rpx;
}

.product-name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.transaction-time {
  font-size: 24rpx;
  color: #999;
}

.transaction-points {
  display: flex;
  align-items: center;
}

.points-change {
  font-size: 36rpx;
  font-weight: bold;
  color: #FF6B6B;
  margin-right: 10rpx;
}

.points-label {
  font-size: 24rpx;
  color: #999;
}

.divider {
  height: 1rpx;
  background-color: #f0f0f0;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 20rpx;
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.5;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}